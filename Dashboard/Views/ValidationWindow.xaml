<Window x:Class="Dashboard.Views.ValidationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Validação de Modelos" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <!-- Estilos personalizados -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Converter para ícones simples -->
        <Style x:Key="SimpleIconStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <TextBlock Grid.Row="0" 
                   Text="Validação de Modelos de Predição" 
                   Style="{StaticResource HeaderTextStyle}"/>

        <!-- Painel de Controle -->
        <materialDesign:Card Grid.Row="1" 
                             Margin="0,0,0,20" 
                             Padding="15">
            <StackPanel>
                <TextBlock Text="Controles de Validação" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Seletor de Modelo -->
                    <ComboBox Grid.Column="0" 
                              Name="ModelSelector"
                              materialDesign:HintAssist.Hint="Selecionar Modelo"
                              Margin="0,0,10,0">
                        <ComboBoxItem Content="Todos os Modelos"/>
                        <ComboBoxItem Content="Modelo Metrônomo"/>
                        <ComboBoxItem Content="Anti-Frequência"/>
                        <ComboBoxItem Content="Deep Learning"/>
                        <ComboBoxItem Content="Meta-Learning"/>
                    </ComboBox>

                    <!-- Botão Validar -->
                    <Button Grid.Column="1" 
                            Name="ValidateButton"
                            Content="Validar"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,10,0"
                            Click="ValidateButton_Click"/>

                    <!-- Botão Parar -->
                    <Button Grid.Column="2" 
                            Name="StopButton"
                            Content="Parar"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            IsEnabled="False"
                            Click="StopButton_Click"/>
                </Grid>

                <!-- Barra de Progresso -->
                <ProgressBar Name="ValidationProgress"
                             Height="8"
                             Margin="0,15,0,0"
                             Style="{StaticResource MaterialDesignLinearProgressBar}"/>

                <!-- Status da Validação -->
                <TextBlock Name="StatusText"
                           Text="Pronto para validação"
                           Style="{StaticResource StatusTextStyle}"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Resultados da Validação -->
        <materialDesign:Card Grid.Row="2" 
                             Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Cabeçalho dos Resultados -->
                <StackPanel Grid.Row="0" 
                           Orientation="Horizontal" 
                           Margin="0,0,0,10">
                    <TextBlock Text="Resultados da Validação" 
                               FontWeight="Bold" 
                               FontSize="14"/>
                    
                    <!-- Ícone de status simples (substituindo PackIcon) -->
                    <Ellipse Name="ValidationStatusIcon"
                             Style="{StaticResource SimpleIconStyle}"
                             Fill="Gray"
                             Margin="10,0,0,0"/>
                    
                    <TextBlock Name="ValidationStatusText"
                               Text="Aguardando..."
                               Style="{StaticResource StatusTextStyle}"/>
                </StackPanel>

                <!-- Lista de Resultados -->
                <DataGrid Grid.Row="1" 
                          Name="ResultsDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          Style="{StaticResource MaterialDesignDataGrid}">
                    
                    <DataGrid.Columns>
                        <!-- Status Visual -->
                        <DataGridTemplateColumn Header="Status" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Ellipse Width="16" Height="16">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Success}" Value="True">
                                                        <Setter Property="Fill" Value="Green"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Success}" Value="False">
                                                        <Setter Property="Fill" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Nome do Teste -->
                        <DataGridTextColumn Header="Teste" 
                                            Binding="{Binding TestName}" 
                                            Width="200"/>

                        <!-- Modelo -->
                        <DataGridTextColumn Header="Modelo" 
                                            Binding="{Binding ModelName}" 
                                            Width="150"/>

                        <!-- Acurácia -->
                        <DataGridTextColumn Header="Acurácia" 
                                            Binding="{Binding Accuracy, StringFormat=P2}" 
                                            Width="100"/>

                        <!-- Tempo de Execução -->
                        <DataGridTextColumn Header="Tempo" 
                                            Binding="{Binding ExecutionTime, StringFormat=mm\\:ss}" 
                                            Width="80"/>

                        <!-- Detalhes -->
                        <DataGridTextColumn Header="Detalhes" 
                                            Binding="{Binding Details}" 
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>

        <!-- Resumo -->
        <materialDesign:Card Grid.Row="3" 
                             Margin="0,20,0,0" 
                             Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Estatísticas -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Testes Executados" 
                               FontSize="10" 
                               Foreground="Gray"/>
                    <TextBlock Name="TotalTestsText" 
                               Text="0" 
                               FontSize="18" 
                               FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Sucessos" 
                               FontSize="10" 
                               Foreground="Gray"/>
                    <TextBlock Name="SuccessTestsText" 
                               Text="0" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="Green"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Falhas" 
                               FontSize="10" 
                               Foreground="Gray"/>
                    <TextBlock Name="FailedTestsText" 
                               Text="0" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="Red"/>
                </StackPanel>

                <!-- Botão Exportar -->
                <Button Grid.Column="3" 
                        Name="ExportButton"
                        Content="Exportar Resultados"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="ExportButton_Click"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>