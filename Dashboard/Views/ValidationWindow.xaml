<Window
    x:Class="Dashboard.Views.ValidationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Validação de Modelos"
    Width="800"
    Height="600"
    Background="{DynamicResource MaterialDesignPaper}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    >

    <Window.Resources>
        <!--  Estilos personalizados  -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="SimpleIconStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Cabeçalho  -->
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource HeaderTextStyle}"
            Text="Validação de Modelos de Predição"
            />

        <!--  Painel de Controle  -->
        <Border
            Grid.Row="1"
            Margin="0,0,0,20"
            Padding="15"
            Background="{DynamicResource MaterialDesignCardBackground}"
            CornerRadius="4"
            Effect="{DynamicResource MaterialDesignShadowDepth2}"
            >
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Controles de Validação"
                    />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Seletor de Modelo  -->
                    <ComboBox
                        Name="ModelSelector"
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        materialDesign:HintAssist.Hint="Selecionar Modelo"
                        >
                        <ComboBoxItem Content="Todos os Modelos" />
                        <ComboBoxItem Content="Modelo Metrônomo" />
                        <ComboBoxItem Content="Anti-Frequência" />
                        <ComboBoxItem Content="Deep Learning" />
                        <ComboBoxItem Content="Meta-Learning" />
                    </ComboBox>

                    <!--  Botão Validar  -->
                    <Button
                        Name="ValidateButton"
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        Click="ValidateButton_Click"
                        Content="Validar"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        />

                    <!--  Botão Parar  -->
                    <Button
                        Name="StopButton"
                        Grid.Column="2"
                        Click="StopButton_Click"
                        Content="Parar"
                        IsEnabled="False"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        />
                </Grid>

                <!--  Barra de Progresso  -->
                <ProgressBar
                    Name="ValidationProgress"
                    Height="8"
                    Margin="0,15,0,0"
                    Style="{StaticResource MaterialDesignLinearProgressBar}"
                    />

                <!--  Status da Validação  -->
                <TextBlock
                    Name="StatusText"
                    Margin="0,10,0,0"
                    Style="{StaticResource StatusTextStyle}"
                    Text="Pronto para validação"
                    />
            </StackPanel>
        </Border>

        <!--  Resultados da Validação  -->
        <Border
            Grid.Row="2"
            Padding="15"
            Background="{DynamicResource MaterialDesignCardBackground}"
            CornerRadius="4"
            >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Cabeçalho dos Resultados  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Orientation="Horizontal"
                    >
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Resultados da Validação"
                        />

                    <Ellipse
                        Name="ValidationStatusIcon"
                        Margin="10,0,0,0"
                        Fill="Gray"
                        Style="{StaticResource SimpleIconStyle}"
                        />

                    <TextBlock
                        Name="ValidationStatusText"
                        Style="{StaticResource StatusTextStyle}"
                        Text="Aguardando..."
                        />
                </StackPanel>

                <!--  Lista de Resultados  -->
                <DataGrid
                    Name="ResultsDataGrid"
                    Grid.Row="1"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignDataGrid}"
                    >
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="60" Header="Status">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Ellipse Width="16" Height="16">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Success}" Value="True">
                                                        <Setter Property="Fill" Value="Green" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Success}" Value="False">
                                                        <Setter Property="Fill" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding TestName}"
                            Header="Teste"
                            />

                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding ModelName}"
                            Header="Modelo"
                            />

                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding Accuracy, StringFormat=P2}"
                            Header="Acurácia"
                            />

                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding ExecutionTime, StringFormat=mm\\:ss}"
                            Header="Tempo"
                            />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Details}"
                            Header="Detalhes"
                            />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!--  Resumo  -->
        <Border
            Grid.Row="3"
            Margin="0,20,0,0"
            Padding="15"
            Background="{DynamicResource MaterialDesignCardBackground}"
            CornerRadius="4"
            >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Estatísticas  -->
                <StackPanel Grid.Column="0">
                    <TextBlock
                        FontSize="10"
                        Foreground="Gray"
                        Text="Testes Executados"
                        />
                    <TextBlock
                        Name="TotalTestsText"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="0"
                        />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock
                        FontSize="10"
                        Foreground="Gray"
                        Text="Sucessos"
                        />
                    <TextBlock
                        Name="SuccessTestsText"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="Green"
                        Text="0"
                        />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock
                        FontSize="10"
                        Foreground="Gray"
                        Text="Falhas"
                        />
                    <TextBlock
                        Name="FailedTestsText"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="Red"
                        Text="0"
                        />
                </StackPanel>

                <!--  Botão Exportar  -->
                <Button
                    Name="ExportButton"
                    Grid.Column="3"
                    Click="ExportButton_Click"
                    Content="Exportar Resultados"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    />
            </Grid>
        </Border>
    </Grid>
</Window>
