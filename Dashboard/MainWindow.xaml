<!--  Dashboard/MainWindow.xaml - Atualizado para arquitetura modular  -->
<Window
    x:Class="Dashboard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Dashboard.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Sistema LotofÃ¡cil - Arquitetura Modular"
    Width="1200"
    Height="800"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d"
    >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Converters  -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />

            <!--  Estilos Globais  -->
            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Margin" Value="0,0,0,10" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>

            <Style
                x:Key="ModernButtonStyle"
                BasedOn="{StaticResource MaterialDesignRaisedButton}"
                TargetType="Button"
                >
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="8,4" />
                <Setter Property="MinWidth" Value="100" />
                <Setter Property="Height" Value="32" />
                <Setter Property="FontSize" Value="11" />
            </Style>

            <Style x:Key="StatusTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="10" />
                <Setter Property="Foreground" Value="#FFECEFF4" />
                <Setter Property="Margin" Value="5,2" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <Style x:Key="LoadingOverlayStyle" TargetType="Border">
                <Setter Property="Background" Value="#80000000" />
                <Setter Property="Visibility" Value="Collapsed" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                        <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <!--  Painel Esquerdo  -->
            <ColumnDefinition Width="*" />
            <!--  Ãrea Central  -->
            <ColumnDefinition Width="280" />
            <!--  Painel Direito  -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <!--  Barra de TÃ­tulo  -->
            <RowDefinition Height="*" />
            <!--  ConteÃºdo Principal  -->
            <RowDefinition Height="25" />
            <!--  Status Bar  -->
        </Grid.RowDefinitions>

        <!--  ===== BARRA DE TÃTULO =====  -->
        <Grid
            Name="GridBarraTitulo"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Background="#FF2E3440"
            MouseDown="GridBarraTitulo_MouseDown"
            >

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="12"
                FontWeight="Bold"
                Foreground="White"
                Text="ðŸš€ SISTEMA LOTOFÃCIL - ARQUITETURA MODULAR"
                />

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    FontSize="10"
                    Foreground="White"
                    Text="{Binding ApplicationStatus}"
                    />

                <Button
                    Name="BtnFechar"
                    Width="30"
                    Height="25"
                    Margin="5,2"
                    Panel.ZIndex="100"
                    Background="#FFBF616A"
                    BorderBrush="#FFBF616A"
                    BorderThickness="1"
                    Click="BtnFechar_Click"
                    Content="âœ•"
                    FontWeight="Bold"
                    Foreground="White"
                    />
            </StackPanel>
        </Grid>

        <!--  ===== PAINEL ESQUERDO: MODELOS DE PREDIÃ‡ÃƒO =====  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5,5,2.5,5"
            Background="#FF3B4252"
            BorderBrush="#FF434C5E"
            BorderThickness="1"
            CornerRadius="8"
            >

            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸ¤– MODELOS DE PREDIÃ‡ÃƒO" />

                        <!--  Status do Sistema  -->
                        <GroupBox
                            Margin="0,0,0,15"
                            Foreground="White"
                            Header="Status"
                            >
                            <StackPanel>
                                <TextBlock Style="{StaticResource StatusTextStyle}" Text="{Binding PredictionModels.StatusMessage}" />

                                <ProgressBar
                                    Height="4"
                                    Margin="0,5"
                                    IsIndeterminate="{Binding PredictionModels.IsLoading}"
                                    Visibility="{Binding PredictionModels.IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                    />
                            </StackPanel>
                        </GroupBox>

                        <!--  SeleÃ§Ã£o de Modelo  -->
                        <GroupBox
                            Margin="0,0,0,15"
                            Foreground="White"
                            Header="Modelo Ativo"
                            >
                            <StackPanel>
                                <ComboBox
                                    Margin="0,5"
                                    DisplayMemberPath="Name"
                                    IsEnabled="{Binding PredictionModels.IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                                    ItemsSource="{Binding PredictionModels.AvailableModelInfos}"
                                    SelectedItem="{Binding PredictionModels.SelectedModelInfo}"
                                    />

                                <TextBlock Style="{StaticResource StatusTextStyle}" Text="{Binding PredictionModels.SelectedModelInfo.Description}" />
                            </StackPanel>
                        </GroupBox>

                        <!--  ConfiguraÃ§Ãµes de Palpite  -->
                        <GroupBox
                            Margin="0,0,0,15"
                            Foreground="White"
                            Header="ConfiguraÃ§Ãµes"
                            >
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,2"
                                    FontSize="10"
                                    Foreground="#FFECEFF4"
                                    Text="Concurso Alvo:"
                                    />
                                <TextBox
                                    Margin="0,0,0,10"
                                    IsEnabled="{Binding PredictionModels.IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                                    Text="{Binding PredictionModels.ConcursoAlvo, UpdateSourceTrigger=PropertyChanged}"
                                    />

                                <TextBlock
                                    Margin="0,0,0,2"
                                    FontSize="10"
                                    Foreground="#FFECEFF4"
                                    Text="Quantidade de Palpites:"
                                    />
                                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                    <TextBox
                                        Width="60"
                                        IsEnabled="{Binding PredictionModels.IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                                        Text="{Binding PredictionModels.QuantidadePalpites, UpdateSourceTrigger=PropertyChanged}"
                                        />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="9"
                                        Foreground="#FF616E88"
                                        Text="(1-50)"
                                        />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!--  Comandos de PrediÃ§Ã£o  -->
                        <GroupBox
                            Margin="0,0,0,15"
                            Foreground="White"
                            Header="AÃ§Ãµes"
                            >
                            <StackPanel>
                                <Button
                                    Command="{Binding GerarPalpitePrincipalCommand}"
                                    Content="ðŸŽ¯ Gerar Palpite"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />

                                <Button
                                    Command="{Binding PredictionModels.ValidateSelectedModelCommand}"
                                    Content="ðŸ” Validar Modelo"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />

                                <Button
                                    Command="{Binding PredictionModels.LoadModelConfigurationCommand}"
                                    Content="âš™ï¸ Configurar"
                                    IsEnabled="{Binding PredictionModels.SelectedModel.IsConfigurable}"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />

                                <Button
                                    Command="{Binding PredictionModels.QuickPredictCommand}"
                                    Content="âš¡ Palpite RÃ¡pido"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />

                                <Button
                                    Command="{Binding PredictionModels.GerarMultiplosPalpitesCommand}"
                                    Content="ðŸŽ¯ MÃºltiplos Palpites"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />
                            </StackPanel>
                        </GroupBox>

                        <!--  Ãšltimo Resultado  -->
                        <GroupBox
                            Margin="0,0,0,15"
                            Foreground="White"
                            Header="Ãšltimo Resultado"
                            >
                            <StackPanel>
                                <TextBlock
                                    FontWeight="Bold"
                                    Style="{StaticResource StatusTextStyle}"
                                    Text="{Binding PredictionModels.LastPredictionResult}"
                                    />

                                <ProgressBar
                                    Height="8"
                                    Margin="0,5"
                                    Maximum="1"
                                    Value="{Binding PredictionModels.SelectedModelConfidence}"
                                    />

                                <TextBlock Style="{StaticResource StatusTextStyle}" Text="{Binding PredictionModels.SelectedModelConfidence, StringFormat=ConfianÃ§a: {0:P2}}" />
                            </StackPanel>
                        </GroupBox>

                        <!--  HistÃ³rico  -->
                        <GroupBox Foreground="White" Header="HistÃ³rico">
                            <StackPanel>
                                <ListBox
                                    MaxHeight="120"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ItemsSource="{Binding PredictionModels.PredictionHistory}"
                                    >
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,2">
                                                <TextBlock
                                                    FontSize="10"
                                                    FontWeight="Bold"
                                                    Foreground="White"
                                                    Text="{Binding ModelName}"
                                                    />
                                                <TextBlock
                                                    FontSize="9"
                                                    Foreground="#FFECEFF4"
                                                    Text="{Binding FormattedNumbers}"
                                                    />
                                                <TextBlock
                                                    FontSize="8"
                                                    Foreground="#FF81A1C1"
                                                    Text="{Binding Timestamp, StringFormat=HH:mm:ss}"
                                                    />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <Button
                                    Margin="0,5,0,0"
                                    Command="{Binding PredictionModels.ClearHistoryCommand}"
                                    Content="ðŸ—‘ï¸ Limpar"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

                <!--  Loading Overlay  -->
                <Border Style="{StaticResource LoadingOverlayStyle}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="24"
                            Foreground="White"
                            Text="ðŸ”„"
                            />
                        <TextBlock
                            HorizontalAlignment="Center"
                            Foreground="White"
                            Text="Processando..."
                            />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!--  ===== ÃREA CENTRAL: VISUALIZAÃ‡Ã•ES =====  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="2.5,5,2.5,5"
            Background="#FF2E3440"
            BorderBrush="#FF434C5E"
            BorderThickness="1"
            CornerRadius="8"
            >

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Header Central  -->
                <Border
                    Grid.Row="0"
                    Padding="15,10"
                    Background="#FF434C5E"
                    CornerRadius="8,8,0,0"
                    >
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸ“Š ÃREA PRINCIPAL" />
                        <TextBlock
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{Binding TextoConcurso, StringFormat=Concurso: {0}}"
                            />
                    </StackPanel>
                </Border>

                <!--  Ãrea de ConteÃºdo Central  -->
                <TabControl
                    Grid.Row="1"
                    Margin="10"
                    Background="Transparent"
                    >

                    <!--  Tab: ComparaÃ§Ãµes  -->
                    <TabItem Header="ðŸ“Š ComparaÃ§Ãµes">
                        <ScrollViewer>
                            <StackPanel>
                                <GroupBox
                                    Margin="10"
                                    Foreground="White"
                                    Header="ComparaÃ§Ãµes de Modelos"
                                    >
                                    <ItemsControl ItemsSource="{Binding Comparison.Comparisons}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border
                                                    Margin="5"
                                                    Padding="10"
                                                    Background="#FF434C5E"
                                                    CornerRadius="5"
                                                    >
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="100" />
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock
                                                                FontWeight="Bold"
                                                                Foreground="White"
                                                                Text="{Binding Model1Name}"
                                                                />
                                                            <TextBlock
                                                                FontSize="10"
                                                                Foreground="#FFECEFF4"
                                                                Text="{Binding Model1FormattedNumbers}"
                                                                />
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="#FFA3BE8C"
                                                                Text="{Binding Model1Confidence, StringFormat=Conf: {0:P2}}"
                                                                />
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock
                                                                FontWeight="Bold"
                                                                Foreground="White"
                                                                Text="{Binding Model2Name}"
                                                                />
                                                            <TextBlock
                                                                FontSize="10"
                                                                Foreground="#FFECEFF4"
                                                                Text="{Binding Model2FormattedNumbers}"
                                                                />
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="#FFA3BE8C"
                                                                Text="{Binding Model2Confidence, StringFormat=Conf: {0:P2}}"
                                                                />
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock
                                                                FontWeight="Bold"
                                                                Foreground="#FFBF616A"
                                                                Text="{Binding DiversificationRate, StringFormat=Div: {0:P2}}"
                                                                />
                                                            <TextBlock
                                                                FontSize="10"
                                                                Foreground="#FFECEFF4"
                                                                Text="{Binding CommonNumbers, StringFormat=Comum: {0}}"
                                                                />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!--  Tab: ValidaÃ§Ãµes  -->
                    <TabItem Header="âœ… ValidaÃ§Ãµes">
                        <StackPanel>
                            <GroupBox
                                Margin="10"
                                Foreground="White"
                                Header="Resultados de ValidaÃ§Ã£o"
                                >
                                <StackPanel>
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource SectionHeaderStyle}"
                                        Text="{Binding Validation.LastValidationSummary}"
                                        />

                                    <ProgressBar
                                        Height="15"
                                        Margin="0,10"
                                        Maximum="1"
                                        Value="{Binding Validation.OverallAccuracy}"
                                        />

                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontWeight="Bold"
                                        Foreground="#FFA3BE8C"
                                        Text="{Binding Validation.OverallAccuracy, StringFormat=Accuracy Geral: {0:P2}}"
                                        />

                                    <ScrollViewer Height="200" Margin="0,10">
                                        <ItemsControl ItemsSource="{Binding Validation.ValidationResults}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border
                                                        Margin="2"
                                                        Padding="8"
                                                        Background="{Binding Success, Converter={StaticResource BoolToColorConverter}}"
                                                        CornerRadius="3"
                                                        Opacity="0.8"
                                                        >
                                                        <StackPanel>
                                                            <TextBlock
                                                                FontSize="11"
                                                                FontWeight="Bold"
                                                                Foreground="White"
                                                                Text="{Binding TestName}"
                                                                />
                                                            <TextBlock
                                                                FontSize="10"
                                                                Foreground="White"
                                                                Text="{Binding Message}"
                                                                />
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="White"
                                                                Text="{Binding Duration, StringFormat=Tempo: {0:mm\\:ss}}"
                                                                />
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </TabItem>

                    <!--  Tab: Melhor Palpite  -->
                    <TabItem Header="ðŸŽ¯ Melhor Palpite">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Header com informaÃ§Ãµes do palpite  -->
                            <GroupBox
                                Grid.Row="0"
                                Margin="0,0,0,15"
                                Foreground="White"
                                Header="Melhor Palpite Gerado"
                                >
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,5"
                                        HorizontalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="#FFA3BE8C"
                                        Text="{Binding PredictionModels.LastPredictionText}"
                                        />

                                    <TextBlock
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Foreground="White"
                                        Text="{Binding PredictionModels.SelectedModelConfidence, StringFormat=ConfianÃ§a: {0:P1}}"
                                        />

                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="10"
                                        Foreground="#FFECEFF4"
                                        Text="{Binding PredictionModels.SelectedModelInfo.Name, StringFormat=Modelo: {0}}"
                                        />
                                </StackPanel>
                            </GroupBox>

                            <!--  Ãrea visual das dezenas  -->
                            <ScrollViewer Grid.Row="1">
                                <Grid>
                                    <ItemsControl ItemsSource="{Binding PredictionModels.LastPredictionNumbers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Columns="5"
                                                    />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Viewbox Margin="5" Stretch="Uniform">
                                                    <Border
                                                        Width="110"
                                                        Height="110"
                                                        Background="{Binding BackgroundColor}"
                                                        BorderBrush="{Binding BorderColor}"
                                                        BorderThickness="3"
                                                        CornerRadius="12"
                                                        >
                                                        <Grid>
                                                            <Ellipse Fill="{Binding BorderColor}" Opacity="0.2" />
                                                            <TextBlock
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                FontSize="28"
                                                                FontWeight="Bold"
                                                                Foreground="{Binding ForegroundColor}"
                                                                Text="{Binding Numero}"
                                                                />
                                                            <!--  Indicador de confianÃ§a  -->
                                                            <Border
                                                                Width="20"
                                                                Height="20"
                                                                Margin="3"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Top"
                                                                Background="{Binding BorderColor}"
                                                                CornerRadius="10"
                                                                Opacity="0.8"
                                                                >
                                                                <TextBlock
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="8"
                                                                    FontWeight="Bold"
                                                                    Foreground="White"
                                                                    Text="{Binding Confianca, StringFormat=\{0:P0\}}"
                                                                    />
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                </Viewbox>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!--  Placeholder quando nÃ£o hÃ¡ palpite  -->
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding PredictionModels.LastPredictionNumbers.Count, Converter={StaticResource BoolToVisibilityConverter}}"
                                        >
                                        <TextBlock
                                            Margin="0,20"
                                            HorizontalAlignment="Center"
                                            FontSize="18"
                                            Foreground="#FF81A1C1"
                                            Text="ðŸŽ¯ Nenhum palpite gerado ainda"
                                            />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            Foreground="#FFECEFF4"
                                            Text="Use os botÃµes 'Gerar Palpite' ou 'MÃºltiplos Palpites' para gerar prediÃ§Ãµes"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap"
                                            />
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                    <!--  Tab: Tabela de Palpites  -->
                    <TabItem Header="ðŸ“Š Todos os Palpites">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Header com estatÃ­sticas  -->
                            <GroupBox
                                Grid.Row="0"
                                Margin="0,0,0,15"
                                Foreground="White"
                                Header="EstatÃ­sticas dos Palpites"
                                >
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,20,0"
                                        FontSize="12"
                                        Foreground="#FFA3BE8C"
                                        Text="{Binding PredictionModels.PalpitesGerados.Count, StringFormat=Total: {0} palpites}"
                                        />

                                    <TextBlock
                                        Margin="0,0,20,0"
                                        FontSize="12"
                                        Foreground="#FF88C0D0"
                                        Text="{Binding PredictionModels.MelhorPalpite.Confianca, StringFormat=Melhor: {0:P1}}"
                                        />

                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#FFECEFF4"
                                        Text="{Binding PredictionModels.ConcursoAlvo, StringFormat=Concurso: {0}}"
                                        />
                                </StackPanel>
                            </GroupBox>

                            <!--  Tabela de palpites  -->
                            <ScrollViewer Grid.Row="1">
                                <DataGrid
                                    AlternatingRowBackground="#FF434C5E"
                                    AutoGenerateColumns="False"
                                    Background="#FF2E3440"
                                    CanUserReorderColumns="False"
                                    CanUserResizeRows="False"
                                    Foreground="White"
                                    GridLinesVisibility="Horizontal"
                                    HeadersVisibility="Column"
                                    HorizontalGridLinesBrush="#FF4C566A"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding PredictionModels.PalpitesGerados}"
                                    RowBackground="#FF3B4252"
                                    >

                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="60"
                                            Binding="{Binding Confianca, StringFormat=\{0:P0\}}"
                                            Header="Rank"
                                            />

                                        <DataGridTextColumn
                                            Width="220"
                                            Binding="{Binding PalpiteTexto}"
                                            Header="Palpite"
                                            />

                                        <DataGridTextColumn
                                            Width="100"
                                            Binding="{Binding Confianca, StringFormat=\{0:P2\}}"
                                            Header="ConfianÃ§a"
                                            />

                                        <DataGridTextColumn
                                            Width="80"
                                            Binding="{Binding QuantidadeAcertos}"
                                            Header="Acertos"
                                            />

                                        <DataGridTextColumn
                                            Width="*"
                                            Binding="{Binding ModeloNome}"
                                            Header="Modelo"
                                            />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                    <!--  Tab: Osciladores (Compatibilidade)  -->
                    <TabItem Header="ðŸ”„ Osciladores">
                        <Grid Margin="10">
                            <ItemsControl ItemsSource="{Binding DezenasOscilantes}" Visibility="{Binding MostrarOsciladores, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Columns="5"
                                            />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="100"
                                            Height="100"
                                            Margin="8"
                                            Background="#FF434C5E"
                                            BorderBrush="{Binding EstaSincronizada, Converter={StaticResource BoolToColorConverter}}"
                                            BorderThickness="3"
                                            CornerRadius="8"
                                            >
