<!--  Dashboard/MainWindow.xaml - Atualizado para arquitetura modular  -->
<Window
    x:Class="Dashboard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Dashboard.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Sistema LotofÃ¡cil - Arquitetura Modular"
    Width="1200"
    Height="800"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d"
    >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Converters  -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />

            <!--  Estilos Globais  -->
            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Margin" Value="0,0,0,10" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>

            <Style
                x:Key="ModernButtonStyle"
                BasedOn="{StaticResource MaterialDesignRaisedButton}"
                TargetType="Button"
                >
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="8,4" />
                <Setter Property="MinWidth" Value="100" />
                <Setter Property="Height" Value="32" />
                <Setter Property="FontSize" Value="11" />
            </Style>

            <Style x:Key="StatusTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="10" />
                <Setter Property="Foreground" Value="#FFECEFF4" />
                <Setter Property="Margin" Value="5,2" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <Style x:Key="LoadingOverlayStyle" TargetType="Border">
                <Setter Property="Background" Value="#80000000" />
                <Setter Property="Visibility" Value="Collapsed" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                        <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <!--  Painel Esquerdo  -->
            <ColumnDefinition Width="*" />
            <!--  Ãrea Central  -->
            <ColumnDefinition Width="280" />
            <!--  Painel Direito  -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <!--  Barra de TÃ­tulo  -->
            <RowDefinition Height="*" />
            <!--  ConteÃºdo Principal  -->
            <RowDefinition Height="25" />
            <!--  Status Bar  -->
        </Grid.RowDefinitions>

        <!--  ===== BARRA DE TÃTULO =====  -->
        <Grid
            Name="GridBarraTitulo"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Background="#FF2E3440"
            MouseDown="GridBarraTitulo_MouseDown"
            >

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="12"
                FontWeight="Bold"
                Foreground="White"
                Text="ðŸš€ SISTEMA LOTOFÃCIL - ARQUITETURA MODULAR"
                />

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    FontSize="10"
                    Foreground="White"
                    Text="{Binding ApplicationStatus}"
                    />

                <Button
                    Name="BtnFechar"
                    Width="30"
                    Height="30"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="BtnFechar_Click"
                    Content="âœ•"
                    FontWeight="Bold"
                    Foreground="White"
                    />
            </StackPanel>
        </Grid>

        <!--  ===== PAINEL ESQUERDO: MODELOS DE PREDIÃ‡ÃƒO =====  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5,5,2.5,5"
            Background="#FF3B4252"
            BorderBrush="#FF434C5E"
            BorderThickness="1"
            CornerRadius="8"
            >

            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸ¤– MODELOS DE PREDIÃ‡ÃƒO" />

                        <!--  Status do Sistema  -->
                        <GroupBox
                            Margin="0,0,0,15"
                            Foreground="White"
                            Header="Status"
                            >
                            <StackPanel>
                                <TextBlock Style="{StaticResource StatusTextStyle}" Text="{Binding PredictionModels.StatusMessage}" />

                                <ProgressBar
                                    Height="4"
                                    Margin="0,5"
                                    IsIndeterminate="{Binding PredictionModels.IsLoading}"
                                    Visibility="{Binding PredictionModels.IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                    />
                            </StackPanel>
                        </GroupBox>

                        <!--  SeleÃ§Ã£o de Modelo  -->
                        <GroupBox
                            Margin="0,0,0,15"
                            Foreground="White"
                            Header="Modelo Ativo"
                            >
                            <StackPanel>
                                <ComboBox
                                    Margin="0,5"
                                    DisplayMemberPath="Name"
                                    IsEnabled="{Binding PredictionModels.IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                    ItemsSource="{Binding PredictionModels.AvailableModels}"
                                    SelectedItem="{Binding PredictionModels.SelectedModel}"
                                    />

                                <TextBlock Style="{StaticResource StatusTextStyle}" Text="{Binding PredictionModels.SelectedModel.Description}" />
                            </StackPanel>
                        </GroupBox>

                        <!--  Concurso Alvo  -->
                        <GroupBox
                            Margin="0,0,0,15"
                            Foreground="White"
                            Header="Concurso Alvo"
                            >
                            <StackPanel>
                                <TextBox
                                    Margin="0,5"
                                    IsEnabled="{Binding PredictionModels.IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                    Text="{Binding TextoConcurso, UpdateSourceTrigger=PropertyChanged}"
                                    />
                            </StackPanel>
                        </GroupBox>

                        <!--  Comandos de PrediÃ§Ã£o  -->
                        <GroupBox
                            Margin="0,0,0,15"
                            Foreground="White"
                            Header="AÃ§Ãµes"
                            >
                            <StackPanel>
                                <Button
                                    Command="{Binding GerarPalpitePrincipalCommand}"
                                    Content="ðŸŽ¯ Gerar Palpite"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />

                                <Button
                                    Command="{Binding PredictionModels.ValidateSelectedModelCommand}"
                                    Content="ðŸ” Validar Modelo"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />

                                <Button
                                    Command="{Binding PredictionModels.LoadModelConfigurationCommand}"
                                    Content="âš™ï¸ Configurar"
                                    IsEnabled="{Binding PredictionModels.SelectedModel.IsConfigurable}"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />

                                <Button
                                    Command="{Binding PredictionModels.QuickPredictCommand}"
                                    Content="âš¡ Palpite RÃ¡pido"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />
                            </StackPanel>
                        </GroupBox>

                        <!--  Ãšltimo Resultado  -->
                        <GroupBox
                            Margin="0,0,0,15"
                            Foreground="White"
                            Header="Ãšltimo Resultado"
                            >
                            <StackPanel>
                                <TextBlock
                                    FontWeight="Bold"
                                    Style="{StaticResource StatusTextStyle}"
                                    Text="{Binding PredictionModels.LastPredictionResult}"
                                    />

                                <ProgressBar
                                    Height="8"
                                    Margin="0,5"
                                    Maximum="1"
                                    Value="{Binding PredictionModels.SelectedModelConfidence}"
                                    />

                                <TextBlock Style="{StaticResource StatusTextStyle}" Text="{Binding PredictionModels.SelectedModelConfidence, StringFormat=ConfianÃ§a: {0:P2}}" />
                            </StackPanel>
                        </GroupBox>

                        <!--  HistÃ³rico  -->
                        <GroupBox Foreground="White" Header="HistÃ³rico">
                            <StackPanel>
                                <ListBox
                                    MaxHeight="120"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ItemsSource="{Binding PredictionModels.PredictionHistory}"
                                    >
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,2">
                                                <TextBlock
                                                    FontSize="10"
                                                    FontWeight="Bold"
                                                    Foreground="White"
                                                    Text="{Binding ModelName}"
                                                    />
                                                <TextBlock
                                                    FontSize="9"
                                                    Foreground="#FFECEFF4"
                                                    Text="{Binding FormattedNumbers}"
                                                    />
                                                <TextBlock
                                                    FontSize="8"
                                                    Foreground="#FF81A1C1"
                                                    Text="{Binding Timestamp, StringFormat=HH:mm:ss}"
                                                    />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <Button
                                    Margin="0,5,0,0"
                                    Command="{Binding PredictionModels.ClearHistoryCommand}"
                                    Content="ðŸ—‘ï¸ Limpar"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

                <!--  Loading Overlay  -->
                <Border Style="{StaticResource LoadingOverlayStyle}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="24"
                            Foreground="White"
                            Text="ðŸ”„"
                            />
                        <TextBlock
                            HorizontalAlignment="Center"
                            Foreground="White"
                            Text="Processando..."
                            />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!--  ===== ÃREA CENTRAL: VISUALIZAÃ‡Ã•ES =====  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="2.5,5,2.5,5"
            Background="#FF2E3440"
            BorderBrush="#FF434C5E"
            BorderThickness="1"
            CornerRadius="8"
            >

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Header Central  -->
                <Border
                    Grid.Row="0"
                    Padding="15,10"
                    Background="#FF434C5E"
                    CornerRadius="8,8,0,0"
                    >
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸ“Š ÃREA PRINCIPAL" />
                        <TextBlock
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{Binding TextoConcurso, StringFormat=Concurso: {0}}"
                            />
                    </StackPanel>
                </Border>

                <!--  Ãrea de ConteÃºdo Central  -->
                <TabControl
                    Grid.Row="1"
                    Margin="10"
                    Background="Transparent"
                    >

                    <!--  Tab: ComparaÃ§Ãµes  -->
                    <TabItem Header="ðŸ“Š ComparaÃ§Ãµes">
                        <ScrollViewer>
                            <StackPanel>
                                <GroupBox
                                    Margin="10"
                                    Foreground="White"
                                    Header="ComparaÃ§Ãµes de Modelos"
                                    >
                                    <ItemsControl ItemsSource="{Binding Comparison.Comparisons}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border
                                                    Margin="5"
                                                    Padding="10"
                                                    Background="#FF434C5E"
                                                    CornerRadius="5"
                                                    >
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="100" />
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock
                                                                FontWeight="Bold"
                                                                Foreground="White"
                                                                Text="{Binding Model1Name}"
                                                                />
                                                            <TextBlock
                                                                FontSize="10"
                                                                Foreground="#FFECEFF4"
                                                                Text="{Binding Model1FormattedNumbers}"
                                                                />
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="#FFA3BE8C"
                                                                Text="{Binding Model1Confidence, StringFormat=Conf: {0:P2}}"
                                                                />
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock
                                                                FontWeight="Bold"
                                                                Foreground="White"
                                                                Text="{Binding Model2Name}"
                                                                />
                                                            <TextBlock
                                                                FontSize="10"
                                                                Foreground="#FFECEFF4"
                                                                Text="{Binding Model2FormattedNumbers}"
                                                                />
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="#FFA3BE8C"
                                                                Text="{Binding Model2Confidence, StringFormat=Conf: {0:P2}}"
                                                                />
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock
                                                                FontWeight="Bold"
                                                                Foreground="#FFBF616A"
                                                                Text="{Binding DiversificationRate, StringFormat=Div: {0:P2}}"
                                                                />
                                                            <TextBlock
                                                                FontSize="10"
                                                                Foreground="#FFECEFF4"
                                                                Text="{Binding CommonNumbers, StringFormat=Comum: {0}}"
                                                                />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!--  Tab: ValidaÃ§Ãµes  -->
                    <TabItem Header="âœ… ValidaÃ§Ãµes">
                        <StackPanel>
                            <GroupBox
                                Margin="10"
                                Foreground="White"
                                Header="Resultados de ValidaÃ§Ã£o"
                                >
                                <StackPanel>
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource SectionHeaderStyle}"
                                        Text="{Binding Validation.LastValidationSummary}"
                                        />

                                    <ProgressBar
                                        Height="15"
                                        Margin="0,10"
                                        Maximum="1"
                                        Value="{Binding Validation.OverallAccuracy}"
                                        />

                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontWeight="Bold"
                                        Foreground="#FFA3BE8C"
                                        Text="{Binding Validation.OverallAccuracy, StringFormat=Accuracy Geral: {0:P2}}"
                                        />

                                    <ScrollViewer Height="200" Margin="0,10">
                                        <ItemsControl ItemsSource="{Binding Validation.ValidationResults}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border
                                                        Margin="2"
                                                        Padding="8"
                                                        Background="{Binding Success, Converter={StaticResource BoolToColorConverter}}"
                                                        CornerRadius="3"
                                                        Opacity="0.8"
                                                        >
                                                        <StackPanel>
                                                            <TextBlock
                                                                FontSize="11"
                                                                FontWeight="Bold"
                                                                Foreground="White"
                                                                Text="{Binding TestName}"
                                                                />
                                                            <TextBlock
                                                                FontSize="10"
                                                                Foreground="White"
                                                                Text="{Binding Message}"
                                                                />
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="White"
                                                                Text="{Binding Duration, StringFormat=Tempo: {0:mm\\:ss}}"
                                                                />
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </TabItem>

                    <!--  Tab: Osciladores (Compatibilidade)  -->
                    <TabItem Header="ðŸ”„ Osciladores">
                        <ScrollViewer>
                            <ItemsControl ItemsSource="{Binding DezenasOscilantes}" Visibility="{Binding MostrarOsciladores, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="50"
                                            Height="50"
                                            Margin="3"
                                            BorderBrush="{Binding EstaSincronizada, Converter={StaticResource BoolToColorConverter}}"
                                            BorderThickness="2"
                                            CornerRadius="6"
                                            >
                                            <Grid>
                                                <Ellipse Fill="{Binding EstaSincronizada, Converter={StaticResource BoolToColorConverter}}" Opacity="0.3" />
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="Bold"
                                                    Foreground="White"
                                                    Text="{Binding Numero}"
                                                    />
                                                <ProgressBar
                                                    Height="3"
                                                    Margin="3"
                                                    VerticalAlignment="Bottom"
                                                    Maximum="360"
                                                    Value="{Binding Fase}"
                                                    />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>

        <!--  ===== PAINEL DIREITO: CONTROLES E TESTES =====  -->
        <Border
            Grid.Row="1"
            Grid.Column="2"
            Margin="2.5,5,5,5"
            Background="#FF3B4252"
            BorderBrush="#FF434C5E"
            BorderThickness="1"
            CornerRadius="8"
            >

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸ”§ CONTROLES E TESTES" />

                    <!--  ValidaÃ§Ã£o  -->
                    <GroupBox
                        Margin="0,0,0,15"
                        Foreground="White"
                        Header="ValidaÃ§Ã£o"
                        >
                        <StackPanel>
                            <Button
                                Command="{Binding ExecutarValidacaoPrincipalCommand}"
                                Content="ðŸ” ValidaÃ§Ã£o Completa"
                                Style="{StaticResource ModernButtonStyle}"
                                />

                            <Button
                                Command="{Binding Validation.RunQuickValidationCommand}"
                                Content="âš¡ ValidaÃ§Ã£o RÃ¡pida"
                                Style="{StaticResource ModernButtonStyle}"
                                />

                            <TextBlock Style="{StaticResource StatusTextStyle}" Text="{Binding Validation.StatusMessage}" />

                            <ProgressBar
                                Height="8"
                                Margin="0,5"
                                Maximum="1"
                                Value="{Binding Validation.OverallAccuracy}"
                                />
                        </StackPanel>
                    </GroupBox>

                    <!--  ComparaÃ§Ã£o  -->
                    <GroupBox
                        Margin="0,0,0,15"
                        Foreground="White"
                        Header="ComparaÃ§Ã£o"
                        >
                        <StackPanel>
                            <Button
                                Command="{Binding ExecutarComparacaoPrincipalCommand}"
                                Content="ðŸ“Š Comparar Modelos"
                                Style="{StaticResource ModernButtonStyle}"
                                />

                            <Button
                                Command="{Binding Comparison.ClearComparisonsCommand}"
                                Content="ðŸ—‘ï¸ Limpar ComparaÃ§Ãµes"
                                Style="{StaticResource ModernButtonStyle}"
                                />

                            <TextBlock Style="{StaticResource StatusTextStyle}" Text="{Binding Comparison.ComparisonSummary}" />
                        </StackPanel>
                    </GroupBox>

                    <!--  Estudos Legacy  -->
                    <GroupBox
                        Margin="0,0,0,15"
                        Foreground="White"
                        Header="Estudos Legacy"
                        >
                        <StackPanel>
                            <UniformGrid Columns="2">
                                <Button
                                    Command="{Binding PrimeiroCommand}"
                                    Content="1Âº"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />
                                <Button
                                    Command="{Binding SegundoCommand}"
                                    Content="2Âº"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />
                                <Button
                                    Command="{Binding TerceiroCommand}"
                                    Content="3Âº"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />
                                <Button
                                    Command="{Binding QuartoCommand}"
                                    Content="4Âº"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />
                                <Button
                                    Command="{Binding QuintoCommand}"
                                    Content="5Âº"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />
                                <Button
                                    Command="{Binding SextoCommand}"
                                    Content="6Âº"
                                    Style="{StaticResource ModernButtonStyle}"
                                    />
                            </UniformGrid>
                        </StackPanel>
                    </GroupBox>

                    <!--  Osciladores  -->
                    <GroupBox
                        Margin="0,0,0,15"
                        Foreground="White"
                        Header="Osciladores"
                        >
                        <StackPanel>
                            <Button
                                Command="{Binding IniciarSincronizacaoCommand}"
                                Content="ðŸ”„ Iniciar SincronizaÃ§Ã£o"
                                Style="{StaticResource ModernButtonStyle}"
                                />

                            <CheckBox
                                Margin="5,10,0,0"
                                Content="Mostrar Osciladores"
                                Foreground="White"
                                IsChecked="{Binding MostrarOsciladores}"
                                />
                        </StackPanel>
                    </GroupBox>

                    <!--  Status do Sistema  -->
                    <GroupBox Foreground="White" Header="Status Geral">
                        <StackPanel>
                            <TextBlock
                                FontWeight="Bold"
                                Style="{StaticResource StatusTextStyle}"
                                Text="{Binding ApplicationStatus}"
                                />

                            <Rectangle
                                Height="1"
                                Margin="0,10"
                                Fill="#FF434C5E"
                                />

                            <TextBlock Style="{StaticResource StatusTextStyle}" Text="ðŸ¤– Modelos:" />
                            <TextBlock
                                Margin="10,0,0,5"
                                Style="{StaticResource StatusTextStyle}"
                                Text="{Binding PredictionModels.StatusMessage}"
                                />

                            <TextBlock Style="{StaticResource StatusTextStyle}" Text="âœ… ValidaÃ§Ã£o:" />
                            <TextBlock
                                Margin="10,0,0,5"
                                Style="{StaticResource StatusTextStyle}"
                                Text="{Binding Validation.StatusMessage}"
                                />

                            <TextBlock Style="{StaticResource StatusTextStyle}" Text="ðŸ“Š ComparaÃ§Ã£o:" />
                            <TextBlock
                                Margin="10,0,0,5"
                                Style="{StaticResource StatusTextStyle}"
                                Text="{Binding Comparison.StatusMessage}"
                                />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!--  ===== STATUS BAR =====  -->
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Background="#FF434C5E"
            BorderBrush="#FF4C566A"
            BorderThickness="0,1,0,0"
            >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="10"
                    Foreground="White"
                    Text="{Binding StatusMessage}"
                    />

                <TextBlock
                    Grid.Column="1"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="10"
                    Foreground="#FFA3BE8C"
                    Text="{Binding IsSystemReady, StringFormat=Sistema: {0}}"
                    />

                <TextBlock
                    Grid.Column="2"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="10"
                    Foreground="#FF81A1C1"
                    Text="{Binding LastUpdate, StringFormat=HH:mm:ss}"
                    />
            </Grid>
        </Border>
    </Grid>
</Window>
