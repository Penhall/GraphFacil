<Window x:Class="Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Dashboard Lotofácil - Osciladores Sincronizados" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- Converter inverso para Boolean -->
        <Style x:Key="InverseBooleanStyle" TargetType="{x:Type FrameworkElement}">
            <Setter Property="IsEnabled" Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Converter para cores baseadas na sincronização -->
        <Style x:Key="SyncBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding EstaSincronizada}" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                    <Setter Property="BorderThickness" Value="3"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Converter para cores baseadas na força -->
        <Style x:Key="ForceBackgroundStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="#FFEB3B"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding EstaQuente}" Value="True">
                    <Setter Property="Fill" Value="#FF5722"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding EstaFria}" Value="True">
                    <Setter Property="Fill" Value="#2196F3"/>
                    <Setter Property="Opacity" Value="0.4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header com informações do concurso -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <md:PackIcon Kind="Calculator" Foreground="White" Width="32" Height="32" Margin="0,0,10,0"/>
                    <TextBlock Text="Dashboard Lotofácil - Osciladores Sincronizados" 
                               Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Caixa de texto do concurso -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <TextBlock Text="Concurso:" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding TextoConcurso, UpdateSourceTrigger=PropertyChanged}" 
                             Background="White" BorderBrush="White" Width="150" Height="30" 
                             VerticalContentAlignment="Center" FontWeight="Bold"/>
                </StackPanel>

                <Button Grid.Column="2" Command="{Binding TerminarProgramaCommand}" 
                        Background="Transparent" BorderBrush="White" Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Kind="ExitToApp" Margin="0,0,5,0"/>
                        <TextBlock Text="SAIR"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Barra de controles principais -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Controles dos osciladores -->
                <WrapPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Command="{Binding ProcessarOsciladoresAvancadoCommand}" Margin="5" 
                            Style="{StaticResource InverseBooleanStyle}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="Play" Margin="0,0,5,0"/>
                            <TextBlock Text="PROCESSAR OSCILADORES"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding IniciarSincronizacaoCommand}" Margin="5"
                            Style="{StaticResource InverseBooleanStyle}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="Sync" Margin="0,0,5,0"/>
                            <TextBlock Text="INICIAR SINCRONIZAÇÃO"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ResetarOsciladoresCommand}" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="Refresh" Margin="0,0,5,0"/>
                            <TextBlock Text="RESETAR"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding AbrirValidacaoCommand}" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="ChartLine" Margin="0,0,5,0"/>
                            <TextBlock Text="VALIDAR MODELO"/>
                        </StackPanel>
                    </Button>

                    <CheckBox Content="Mostrar Osciladores" IsChecked="{Binding MostrarOsciladores}" 
                              VerticalAlignment="Center" Margin="20,0,0,0" FontWeight="Bold"/>
                </WrapPanel>

                <!-- Indicador de processamento -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="20" Margin="10,0"/>
                    <TextBlock Text="Processando..." VerticalAlignment="Center" FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Área principal -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Painel dos osciladores -->
            <GroupBox Grid.Column="0" Header="Osciladores das Dezenas" 
                      Visibility="{Binding MostrarOsciladores, Converter={StaticResource BoolToVisConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding DezenasOscilantes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="80" Height="80" CornerRadius="8" Margin="5" 
                                        Style="{StaticResource SyncBorderStyle}">
                                    <Grid>
                                        <!-- Fundo colorido baseado na força -->
                                        <Rectangle Style="{StaticResource ForceBackgroundStyle}"/>

                                        <!-- Número da dezena -->
                                        <TextBlock Text="{Binding Numero}" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   FontWeight="Bold" FontSize="16"/>

                                        <!-- Barra de progresso da fase -->
                                        <ProgressBar Value="{Binding Fase}" Maximum="360" Height="8" 
                                                     VerticalAlignment="Bottom" Margin="5,0,5,5">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar">
                                                    <Setter Property="Foreground" Value="#9E9E9E"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding EstaSincronizada}" Value="True">
                                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>

                                        <!-- Indicador de atraso -->
                                        <TextBlock Text="{Binding UltimoAtraso}" 
                                                   HorizontalAlignment="Right" VerticalAlignment="Top"
                                                   Margin="2" FontSize="10" FontWeight="Bold"
                                                   Foreground="#FF5722"/>

                                        <!-- Indicador de probabilidade -->
                                        <Ellipse Width="12" Height="12" 
                                                 HorizontalAlignment="Left" VerticalAlignment="Top"
                                                 Margin="5">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#9E9E9E"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding EstaQuente}" Value="True">
                                                            <Setter Property="Fill" Value="#FF5722"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding EstaFria}" Value="True">
                                                            <Setter Property="Fill" Value="#2196F3"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>

            <!-- Divisor -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" 
                          Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- Painel de controle e resultados -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Estudos -->
                <GroupBox Grid.Row="0" Header="Estudos" Margin="0,0,0,10">
                    <WrapPanel Orientation="Horizontal">
                        <Button Command="{Binding PrimeiroCommand}" Margin="2">
                            <StackPanel Orientation="Horizontal">
                                <md:PackIcon Kind="Numeric1" Margin="0,0,5,0"/>
                                <TextBlock Text="PRIMEIRO"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding SegundoCommand}" Margin="2">
                            <StackPanel Orientation="Horizontal">
                                <md:PackIcon Kind="Numeric2" Margin="0,0,5,0"/>
                                <TextBlock Text="SEGUNDO"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding TerceiroCommand}" Margin="2">
                            <StackPanel Orientation="Horizontal">
                                <md:PackIcon Kind="Numeric3" Margin="0,0,5,0"/>
                                <TextBlock Text="TERCEIRO"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding QuartoCommand}" Margin="2">
                            <StackPanel Orientation="Horizontal">
                                <md:PackIcon Kind="Numeric4" Margin="0,0,5,0"/>
                                <TextBlock Text="QUARTO"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding QuintoCommand}" Margin="2">
                            <StackPanel Orientation="Horizontal">
                                <md:PackIcon Kind="Numeric5" Margin="0,0,5,0"/>
                                <TextBlock Text="QUINTO"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding SextoCommand}" Margin="2">
                            <StackPanel Orientation="Horizontal">
                                <md:PackIcon Kind="Numeric6" Margin="0,0,5,0"/>
                                <TextBlock Text="SEXTO"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding SetimoCommand}" Margin="2">
                            <StackPanel Orientation="Horizontal">
                                <md:PackIcon Kind="Numeric7" Margin="0,0,5,0"/>
                                <TextBlock Text="SÉTIMO"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding OitavoCommand}" Margin="2">
                            <StackPanel Orientation="Horizontal">
                                <md:PackIcon Kind="Numeric8" Margin="0,0,5,0"/>
                                <TextBlock Text="OITAVO"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </GroupBox>

                <!-- Último palpite -->
                <GroupBox Grid.Row="1" Header="Último Palpite Gerado" Margin="0,0,0,10">
                    <TextBlock Text="{Binding UltimoPalpite}" FontFamily="Courier New" FontSize="14" 
                               FontWeight="Bold" TextWrapping="Wrap" Foreground="#2E7D32"/>
                </GroupBox>

                <!-- Legenda -->
                <GroupBox Grid.Row="2" Header="Legenda">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Ellipse Width="12" Height="12" Fill="#FF5722" Margin="0,0,10,0"/>
                            <TextBlock Text="Número Quente (Alta Probabilidade)" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Ellipse Width="12" Height="12" Fill="#2196F3" Margin="0,0,10,0"/>
                            <TextBlock Text="Número Frio (Baixa Probabilidade)" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Rectangle Width="12" Height="12" Fill="#4CAF50" Margin="0,0,10,0"/>
                            <TextBlock Text="Borda Verde: Sincronizado" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Número no canto superior direito:" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="Atraso (concursos sem sair)"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Rectangle Width="20" Height="8" Fill="#4CAF50" Margin="0,0,10,0"/>
                            <TextBlock Text="Barra inferior: Fase do oscilador (0°-360°)"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="3" Background="{DynamicResource MaterialDesignDivider}" Padding="20,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Sistema de Osciladores Sincronizados - Lotofácil" 
                           VerticalAlignment="Center" FontSize="12"/>

                <TextBlock Grid.Column="1" Text="Dashboard Ativo"
                           VerticalAlignment="Center" FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>