<!--  D:\PROJETOS\GraphFacil\Dashboard\MainWindow.xaml  -->
<Window
    x:Class="Dashboard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Dashboard.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Dashboard.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="1080"
    Height="700"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d"
    >

    <Grid>
        <!--  Background Gradient  -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="#FF2E3440" />
                <GradientStop Offset="0.5" Color="#FF3B4252" />
                <GradientStop Offset="1" Color="#FF434C5E" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  ==================================  -->
        <!--  BARRA DE TÍTULO  -->
        <!--  ==================================  -->
        <Border
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Background="#FF1A252F"
            MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
            >
            <Grid>
                <StackPanel
                    Margin="15,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    >
                    <md:PackIcon
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Foreground="#FF3B82F6"
                        Kind="Analytics"
                        />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="Sistema de Metrônomos Lotofácil v2.0 - Fase 1"
                        />
                </StackPanel>

                <StackPanel
                    Margin="15,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    >
                    <Button
                        x:Name="BtnMinimize"
                        Width="30"
                        Height="25"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BtnMinimize_Click"
                        Content="−"
                        Foreground="White"
                        />
                    <Button
                        x:Name="BtnClose"
                        Width="30"
                        Height="25"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BtnClose_Click"
                        Content="×"
                        Foreground="White"
                        />
                </StackPanel>
            </Grid>
        </Border>

        <!--  ==================================  -->
        <!--  PAINEL ESQUERDO - AÇÕES PRINCIPAIS  -->
        <!--  ==================================  -->
        <Border
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Margin="10,10,5,10"
            Background="{StaticResource SecondaryBackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            >

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">

                    <!--  Título da Seção  -->
                    <TextBlock
                        Margin="0,0,0,15"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#FFECEFF4"
                        Text="🎯 AÇÕES PRINCIPAIS"
                        />

                    <!--  Botões Originais  -->
                    <Button Command="{Binding PrimeiroCommand}" Style="{StaticResource ActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Margin="0,0,8,0" Kind="Play" />
                            <TextBlock Text="PRIMEIRO" />
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SegundoCommand}" Style="{StaticResource ActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Margin="0,0,8,0" Kind="Settings" />
                            <TextBlock Text="SEGUNDO" />
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding TerceiroCommand}" Style="{StaticResource ActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Margin="0,0,8,0" Kind="Database" />
                            <TextBlock Text="TERCEIRO" />
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding QuartoCommand}" Style="{StaticResource ActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Margin="0,0,8,0" Kind="School" />
                            <TextBlock Text="QUARTO" />
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding QuintoCommand}" Style="{StaticResource ActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Margin="0,0,8,0" Kind="ViewDashboard" />
                            <TextBlock Text="QUINTO" />
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SextoCommand}" Style="{StaticResource ActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Margin="0,0,8,0" Kind="Target" />
                            <TextBlock Text="SEXTO" />
                        </StackPanel>
                    </Button>

                    <!--  Separador  -->
                    <Separator Margin="0,15,0,15" Background="{StaticResource BorderBrush}" />

                    <!--  Novos Comandos  -->
                    <TextBlock
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="#FF88C0D0"
                        Text="🚀 SISTEMA NOVO"
                        />

                    <Button Command="{Binding GerarPalpiteCommand}" Style="{StaticResource ActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Margin="0,0,8,0" Kind="AutoFix" />
                            <TextBlock Text="GERAR PALPITE" />
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ValidarEstrategiasCommand}" Style="{StaticResource ActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Margin="0,0,8,0" Kind="CheckCircle" />
                            <TextBlock Text="VALIDAR" />
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding IniciarSincronizacaoCommand}" Style="{StaticResource ActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Margin="0,0,8,0" Kind="Sync" />
                            <TextBlock Text="SINCRONIZAR" />
                        </StackPanel>
                    </Button>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!--  ==================================  -->
        <!--  PAINEL CENTRAL SUPERIOR - STATUS  -->
        <!--  ==================================  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="5,10,5,5"
            Background="{StaticResource PrimaryBackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            >

            <StackPanel Margin="15">
                <TextBlock
                    Margin="0,0,0,15"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#FFECEFF4"
                    Text="🚀 STATUS DO SISTEMA"
                    />

                <!--  Status Engine  -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="#FFD8DEE9"
                        Text="Status:"
                        />

                    <TextBlock
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        FontFamily="Courier New"
                        FontSize="11"
                        Foreground="#FF88C0D0"
                        Text="{Binding StatusEngine}"
                        TextWrapping="Wrap"
                        />
                </Grid>

                <!--  Último Palpite  -->
                <Grid Margin="0,0,0,10" Visibility="{Binding UltimoPalpite, Converter={StaticResource StringToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Top"
                        FontWeight="SemiBold"
                        Foreground="#FFD8DEE9"
                        Text="Palpite:"
                        />

                    <TextBlock
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        FontFamily="Courier New"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="#FFA3BE8C"
                        Text="{Binding UltimoPalpite}"
                        TextWrapping="Wrap"
                        />
                </Grid>

                <!--  Confiança  -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="#FFD8DEE9"
                        Text="Confiança:"
                        />

                    <ProgressBar
                        Grid.Column="1"
                        Height="15"
                        Margin="10,0,0,0"
                        Background="{StaticResource AccentBackgroundBrush}"
                        Foreground="#FFA3BE8C"
                        Maximum="1.0"
                        Minimum="0.0"
                        Value="{Binding ConfiancaAtual}"
                        />
                </Grid>

                <!--  Concurso Alvo  -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="#FFD8DEE9"
                        Text="Concurso:"
                        />

                    <TextBlock
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        FontFamily="Courier New"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#FFEBCB8B"
                        Text="{Binding ConcursoAlvo}"
                        />
                </Grid>

            </StackPanel>
        </Border>

        <!--  ==================================  -->
        <!--  PAINEL CENTRAL INFERIOR - MÉTRICAS  -->
        <!--  ==================================  -->
        <Border
            Grid.Row="2"
            Grid.Column="1"
            Margin="5,5,5,10"
            Background="{StaticResource SecondaryBackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            >

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock
                        Margin="0,0,0,15"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#FFECEFF4"
                        Text="📊 RELATÓRIO GERAL"
                        />

                    <TextBox
                        Height="150"
                        Background="{StaticResource PrimaryBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        FontFamily="Courier New"
                        FontSize="10"
                        Foreground="#FFECEFF4"
                        IsReadOnly="True"
                        Text="{Binding RelatorioGeral}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        />

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!--  ==================================  -->
        <!--  PAINEL DIREITO - AÇÕES AUXILIARES  -->
        <!--  ==================================  -->
        <Border
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2"
            Margin="5,10,10,10"
            Background="{StaticResource SecondaryBackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            >

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">

                    <!--  Título da Seção  -->
                    <TextBlock
                        Margin="0,0,0,15"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#FFECEFF4"
                        Text="⚙️ CONTROLES"
                        />

                    <!--  Campo de texto para concurso  -->
                    <TextBox
                        Margin="0,0,0,15"
                        Foreground="#FFECEFF4"
                        Style="{StaticResource Phase1TextBox}"
                        Text="{Binding TextoConcurso, UpdateSourceTrigger=PropertyChanged}"
                        />

                    <!--  Botões de Controle  -->
                    <Button Command="{Binding SalvarResultadosCommand}" Style="{StaticResource SidePanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Margin="0,0,5,0" Kind="ContentSave" />
                            <TextBlock Text="SALVAR" />
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding TerminarProgramaCommand}" Style="{StaticResource SidePanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Margin="0,0,5,0" Kind="ExitToApp" />
                            <TextBlock Text="SAIR" />
                        </StackPanel>
                    </Button>

                    <!--  Separador  -->
                    <Separator Margin="0,15,0,15" Background="{StaticResource BorderBrush}" />

                    <!--  Toggle Visualizações  -->
                    <CheckBox
                        Margin="0,5"
                        Content="Mostrar Metrônomos"
                        Foreground="#FFECEFF4"
                        IsChecked="{Binding MostrarMetronomos}"
                        />

                    <CheckBox
                        Margin="0,5"
                        Content="Mostrar Osciladores"
                        Foreground="#FFECEFF4"
                        IsChecked="{Binding MostrarOsciladores}"
                        />

                    <!--  Info do Sistema  -->
                    <Separator Margin="0,15,0,15" Background="{StaticResource BorderBrush}" />

                    <TextBlock
                        FontSize="10"
                        Foreground="#FFD8DEE9"
                        Text="{Binding VersaoSistema}"
                        TextWrapping="Wrap"
                        />

                    <TextBlock
                        FontSize="10"
                        Foreground="#FFD8DEE9"
                        TextWrapping="Wrap"
                        >
                        <Run Text="Concursos carregados: " />
                        <Run FontWeight="Bold" Text="{Binding TotalConcursos, Mode=OneWay}" />
                    </TextBlock>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!--  ==================================  -->
        <!--  ÁREA PARA METRÔNOMOS (QUANDO VISÍVEL)  -->
        <!--  ==================================  -->
        <Border
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="5,10,5,10"
            Background="White"
            CornerRadius="10"
            Visibility="{Binding MostrarMetronomos, Converter={StaticResource BoolToVisibilityConverter}}"
            >

            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Metronomos}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="4"
                                Background="LightBlue"
                                BorderBrush="DarkBlue"
                                BorderThickness="1"
                                CornerRadius="5"
                                Cursor="Hand"
                                >
                                <Border.InputBindings>
                                    <MouseBinding
                                        Command="{Binding DataContext.SelecionarMetronomoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        MouseAction="LeftClick"
                                        />
                                </Border.InputBindings>
                                <StackPanel Margin="8" Orientation="Vertical">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Text="{Binding Numero, StringFormat=D2}"
                                        />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="10"
                                        Text="{Binding ProbabilidadeAtual, StringFormat=P1}"
                                        />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="9"
                                        Text="{Binding TipoMetronomo}"
                                        />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!--  ==================================  -->
        <!--  ÁREA PARA OSCILADORES (QUANDO VISÍVEL)  -->
        <!--  ==================================  -->
        <Border
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="5,10,5,10"
            Background="White"
            CornerRadius="10"
            Visibility="{Binding MostrarOsciladores, Converter={StaticResource BoolToVisibilityConverter}}"
            >

            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding DezenasOscilantes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="4"
                                Background="LightGreen"
                                BorderBrush="DarkGreen"
                                BorderThickness="1"
                                CornerRadius="5"
                                >
                                <StackPanel Margin="8" Orientation="Vertical">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Text="{Binding Numero, StringFormat=D2}"
                                        />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="10"
                                        Text="{Binding Probabilidade, StringFormat=P1}"
                                        />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="9"
                                        Text="{Binding EstaSincronizada}"
                                        />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!--  ==================================  -->
        <!--  OVERLAY DE PROCESSAMENTO  -->
        <!--  ==================================  -->
        <Border
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.ColumnSpan="3"
            Background="#80000000"
            Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
            >
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <md:PackIcon
                    Width="50"
                    Height="50"
                    Foreground="White"
                    Kind="Loading"
                    />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Processando..."
                    />
            </StackPanel>
        </Border>

    </Grid>
</Window>
